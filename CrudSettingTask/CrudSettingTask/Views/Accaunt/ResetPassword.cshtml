@model ResetPasswordVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f7f9fc;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .reset-password-container {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            padding: 35px;
            width: 100%;
            max-width: 420px;
        }

        .reset-password-title {
            color: #2d3748;
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 10px;
            text-align: center;
        }

        .reset-password-description {
            color: #718096;
            font-size: 14px;
            margin-bottom: 30px;
            text-align: center;
        }

        .reset-password-form {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .input-group {
            display: flex;
            flex-direction: column;
        }

        .input-label {
            color: #4a5568;
            font-size: 14px;
            font-weight: 500;
            margin-bottom: 8px;
        }

        .password-input {
            border: 1px solid #e2e8f0;
            border-radius: 6px;
            font-size: 16px;
            padding: 12px 14px;
            transition: all 0.2s ease;
        }

            .password-input:focus {
                border-color: #4299e1;
                box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.15);
                outline: none;
            }

        .password-requirements {
            color: #718096;
            font-size: 12px;
            margin-top: 6px;
        }

        .reset-button {
            background-color: #4299e1;
            border: none;
            border-radius: 6px;
            color: white;
            cursor: pointer;
            font-size: 16px;
            font-weight: 500;
            padding: 14px;
            margin-top: 10px;
            transition: background-color 0.2s;
        }

            .reset-button:hover {
                background-color: #3182ce;
            }

            .reset-button:active {
                transform: translateY(1px);
            }

        .login-link {
            color: #4299e1;
            font-size: 14px;
            margin-top: 20px;
            text-align: center;
            text-decoration: none;
            display: block;
        }

            .login-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="reset-password-container">
        <h1 class="reset-password-title">Reset Password</h1>
        <p class="reset-password-description">Please enter your new password below.</p>

        <form asp-controller="Accaunt" asp-action="ResetPassword" method="post" enctype="multipart/form-data" class="reset-password-form">
            <div asp-validation-summary="All"></div>
            <div class="input-group">
                <label asp-for="Password" class="input-label">New Password</label>
                <input type="password" asp-for="Password"  class="password-input" placeholder="Enter new password" required>
                <p class="password-requirements">Password must be at least 8 characters long</p>
            </div>

            <div class="input-group">
                <label asp-for="ConfirmPassword" class="input-label">Confirm Password</label>
                <input type="password" asp-for="ConfirmPassword" class="password-input" placeholder="Confirm new password" required>
                <input type="hidden" asp-for="@Model.UserId" value="@Model.UserId" />
                <input type="hidden" asp-for="@Model.Token" value="@Model.Token" />
            </div>

            <button type="submit" class="reset-button">Reset Password</button>
        </form>

    </div>
</body>
</html>
